<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <distributable/>
    <servlet>
        <servlet-name>SessionAllocator</servlet-name>
        <servlet-class>hu.dpc.javaone.clusterdemo.SessionAllocator</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadGenerator</servlet-name>
        <servlet-class>hu.dpc.javaone.clusterdemo.LoadGenerator</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HealthCheck</servlet-name>
        <servlet-class>hu.dpc.javaone.clusterdemo.HealthCheck</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionAllocator</servlet-name>
        <url-pattern>/allocate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadGenerator</servlet-name>
        <url-pattern>/generateLoad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HealthCheck</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            10
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>check</welcome-file>
    </welcome-file-list>
</web-app>
